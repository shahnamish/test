root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{go,py,ts,tsx,js,jsx}]
indent_style = space

[*.go]
indent_size = 4

[*.{py,ts,tsx,js,jsx,json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
